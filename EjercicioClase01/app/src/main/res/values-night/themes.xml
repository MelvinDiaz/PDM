    <color name="nord7">#8FBCBB</color>
    <color name="nord8">#88C0D0</color>
    <color name="nord9">#81A1C1</color>
    <color name="nord10">#5E81AC</color>
    <color name="nord11">#BF616A</color>
    <color name="nord12">#D08770</color>
    <color name="nord13">#EBCB8B</color>
    <color name="nord14">#A3BE8C</color>
    <color name="nord15">#B48EAD</color>

</resources>
