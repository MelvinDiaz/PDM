<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EjercicioClase" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/nord9</item>
        <item name="colorPrimaryVariant">@color/nord12</item>
        <item name="colorOnPrimary">@color/nord6</item>
        <item name="android:statusBarColor">@color/nord10</item>
        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/nord14</item>
        <item name="colorSecondaryVariant">@color/nord15</item>
        <item name="colorOnSecondary">@color/nord0</item>

        <!-- Background colors -->
        <item name="android:windowBackground">@color/nord6</item>
        <item name="android:colorBackground">@color/nord6</item>
        <item name="colorSurface">@color/nord5</item>
        <item name="colorOnSurface">@color/nord1</item>

        <!-- Text colors -->
        <item name="android:textColor">@color/nord1</item>
        <item name="android:textColorPrimary">@color/nord1</item>
        <item name="android:textColorSecondary">@color/nord0</item>
        <item name="android:textColorHint">@color/nord3</item>
        <item name="colorOnPrimary">@color/nord6</item>
        <item name="colorOnSecondary">@color/nord0</item>
        <item name="colorOnError">@color/nord11</item>

        <!-- Button styles -->
        <item name="buttonStyle">@style/Widget.MaterialComponents.Button.OutlinedButton</item>
        <item name="borderlessButtonStyle">@style/Widget.MaterialComponents.Button.TextButton</item>

    </style>
</resources>